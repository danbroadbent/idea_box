<h1>Create New Idea</h1>
<%= form_for @idea do |f| %>
<%= f.label :name %>
<%= f.text_field :name, placeholder: "Name" %>
<%= f.label :description %>
<%= f.text_field :description, placeholder: "Description" %>
<%= f.label :category_id %>
<%= f.text_field :category_id, placeholder: "Category Id" %>
<%= f.submit %>
<% end %>
